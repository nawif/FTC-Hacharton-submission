<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/FrameLayout1"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top"
        android:weightSum="2">

        <WebView
            android:layout_width="231dp"
            android:layout_height="match_parent"
            android:id="@+id/webView1"
            android:layout_gravity="left|top"
            android:layout_weight="1.89" />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:id="@+id/viewlineDwon"
            android:background="#506700"
            />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|top"
                android:layout_centerHorizontal="true"

                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="&#8801;"
                    android:id="@+id/button1"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:textSize="50dp"
                    android:textColor="@drawable/state_button"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="الفهرس"
                    android:id="@+id/textView1"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="#506700"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="☜"
                    android:textColor="@drawable/state_button"
                    android:textSize="50dp"
                    android:id="@+id/button2"
                    android:background="@android:color/transparent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="التالية"
                    android:id="@+id/textView2"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="#506700"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="☞"
                    android:id="@+id/button7"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:textSize="50dp"
                    android:textColor="@drawable/state_button"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="السابقة"
                    android:id="@+id/textView7"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="#506700"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:id="@+id/button3"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:textSize="50dp"
                    android:textColor="@drawable/state_button"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تكبير"
                    android:id="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="#506700"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:id="@+id/button6"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:textSize="30dp"
                    android:textColor="@drawable/state_button"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تصغير"
                    android:id="@+id/textView6"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="#506700"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="☆"
                    android:id="@+id/button4"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:textSize="50dp"
                    android:textColor="@drawable/state_button"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="المفضلة"
                    android:id="@+id/textView4"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="#506700"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="➦"
                    android:id="@+id/button5"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:textSize="50dp"
                    android:textColor="@drawable/state_button"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مشاركة"
                    android:id="@+id/textView5"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="#506700"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button8"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@drawable/state_button"
                    android:background="@drawable/magnifier3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="بحث"
                    android:id="@+id/textView8"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="#506700"
                    />



            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|right"
        android:weightSum="2">
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:id="@+id/viewlineRight"
            android:background="#506700"
            android:layout_gravity="center_horizontal|right"

            />

        <ListView
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:id="@+id/listMenu"
            android:layout_gravity="center_horizontal|right"

            />


    </LinearLayout>


</FrameLayout>